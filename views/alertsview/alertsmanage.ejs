      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Tables
            <small>advanced management</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Alerts Table</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">

              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Alerts Table</h3>
                  <div class="box-tools">
					<div class="input-group pull-right">
						<button class="btn btn-sm btn-default" onclick="javascript:onAlertsAdd()">Add Alerts</button> 
					</div>
				  </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="alertstable" class="table table-bordered table-striped">
                    <thead>
                      <tr>
						<th>ID</th>
                        <th>User ID</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Book ID</th>
						<th>Location Type</th>
						<th>Location Message</th>
						<th>Operations</th>
                      </tr>
                    </thead>
                    <tbody>
					<% alerts.forEach(function(item) { %>
                      <tr>
						<td><%= item.id %></td>
                        <td><%= item.userid %></td>
                        <td><%= item.type %></td>
						<td><%= item.description %></td>
						<td><%= item.bookid %></td>
						<td><%= item.locationtype %></td>
						<td><%= item.locationmessage %></td>
						<td>
							<button class="btn btn-sm btn-default" onclick="javascript:onAlertsEdit('<%= item.id %>')">Edit</button>
							<button class="btn btn-sm btn-default" onclick="javascript:onAlertsDelete('<%= item.id %>')">Delete</button>
						</td>
                      </tr>
					<% }) %>
					</tbody>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->

                <!-- add -->
                <div class="modal fade" id="alerts-form-modal" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="modaltitle" name="modaltitle">Add Alerts</h4>
                            </div>
                            
							<div class="modal-body">
								<form action="javascript:onSubmitAlertsAdd()" id="addalertsform" method="post">
									<div class="form-group">
										<input type="text" id="userid" name="userid" class="form-control" placeholder="User ID" autofocus>
									</div>
									<div class="form-group">
										<input type="number" id="type" name="type" class="form-control" placeholder="Type">
									</div>
									<div class="form-group">
										<input type="text" id="description" name="description" class="form-control" placeholder="Description">
									</div>
									<div class="form-group">
										<input type="text" id="bookid" name="bookid" class="form-control" placeholder="Book ID">
									</div>
									<div class="form-group">
										<input type="number" id="locationtype" name="locationtype" class="form-control" placeholder="Location Type">
									</div>
									<div class="form-group has-feedback">
										<input type="text" id="locationmessage" name="locationmessage" class="form-control" placeholder="Location Message">
									</div>
									<input type="hidden" id="method">

                                <div class="modal-footer clearfix">
                                    <button id="add_cancel_btn" type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                    <button id="add_ok_btn" type="submit" class="btn btn-primary pull-left">OK</button>
                                </div>
								</form>
							</div> <!-- /.modal-body -->
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->

      </div><!-- /.content-wrapper -->