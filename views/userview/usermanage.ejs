      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Tables
            <small>advanced management</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">User Table</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">

              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">User Table</h3>
                  <div class="box-tools">
					<div class="input-group pull-right">
						<button class="btn btn-sm btn-default" onclick="javascript:onUserAdd()">Add User</button> 
					</div>
				  </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="usertable" class="table table-bordered table-striped">
                    <thead>
                      <tr>
						<th>ID</th>
						<th>Token</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email ID</th>
                        <th>Photo ID</th>
						<th>isGrad</th>
						<th>isAdmin</th>
						<th>Password</th>
						<th>Send Alerts</th>
						<th>Operations</th>
                      </tr>
                    </thead>
                    <tbody>
					<% users.forEach(function(item) { %>
                      <tr>
						<td><%= item.id %></td>
						<td><%= item.token %></td>
                        <td><%= item.firstname %></td>
                        <td><%= item.lastname %></td>
						<td><%= item.emailid %></td>
                        <td >
							<img src="logo/user3-128x128.jpg" alt="User Image" class="table-thumb">
						</td>
						<td><%= item.isGrad %></td>
						<td><%= item.isAdmin %></td>
						<td><%= item.password %></td>
						<td><%= item.sendalert %></td>
						<td>
							<button class="btn btn-sm btn-default" onclick="javascript:onUserEdit('<%= item.id %>')">Edit</button>
							<button class="btn btn-sm btn-default" onclick="javascript:onUserDelete('<%= item.id %>')">Delete</button>
						</td>
                      </tr>
					<% }) %>
					</tbody>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->

                <!-- add -->
                <div class="modal fade" id="user-form-modal" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="modaltitle" name="modaltitle">Add User</h4>
                            </div>
                            
							<div class="modal-body">
								<form action="javascript:onSubmitUserAdd()" id="adduserform" method="post">
									<div class="form-group has-feedback">
										<input type="text" id="firstname" name="firstname" class="form-control" placeholder="First name" autofocus>
									</div>
									<div class="form-group has-feedback">
										<input type="text" id="lastname" name="lastname" class="form-control" placeholder="Last name">
									</div>
									<div class="form-group has-feedback">
										<input type="email" id="emailid" name="emailid" class="form-control" placeholder="Email">
									</div>
									<div class="form-group has-feedback">
										<input type="text" id="photoid" name="photoid" class="form-control" placeholder="Photo ID">
									</div>
									<div class="form-group">
										<input type="checkbox" id="isGrad" name="isGrad"/> isGrad
									</div>
									<div class="form-group">
										<input type="checkbox" id="isAdmin" name="isAdmin"/> isAdmin
									</div>
									<div class="form-group has-feedback">
										<input type="password" id="password" name="password" class="form-control" placeholder="Password">
									</div>
									<div class="form-group has-feedback">
										<input type="password" id="confirm_password" name="confirm_password" class="form-control" placeholder="Confirm password">
									</div>
									<div class="form-group">
										<input type="checkbox" id="sendalert" name="sendalert"/> Send Alert
									</div>
									<input type="hidden" id="method">

                                <div class="modal-footer clearfix">
                                    <button id="add_cancel_btn" type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                    <button id="add_ok_btn" type="submit" class="btn btn-primary pull-left">OK</button>
                                </div>
								</form>
							</div> <!-- /.modal-body -->
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->

      </div><!-- /.content-wrapper -->
